<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.PersonalInfo"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    android:focusableInTouchMode="true"
    android:focusable="false"
    android:layout_gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIdNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:textSize="20dp"
                android:text="@string/tvIdNumber"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/etIdNumber"
                android:layout_width="match_parent"
                android:inputType="number"
                android:maxLength="9"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:textColor="@color/colorBlack"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/text_view_shape" />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:textSize="20dp"
                android:text="@string/tvName"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:textColor="@color/colorBlack"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/text_view_shape" />
            <TextView
                android:id="@+id/tvLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:textSize="20dp"
                android:text="@string/tvLastName"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:textColor="@color/colorBlack"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/text_view_shape" />
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:textSize="20dp"
                android:text="@string/tvPhone"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:inputType="number"
                android:maxLength="8"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:textColor="@color/colorBlack"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/text_view_shape" />
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:textSize="20dp"
                android:text="@string/tvEmail"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:textColor="@color/colorBlack"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/text_view_shape" />
            <TextView
                android:id="@+id/tvDateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:textSize="20dp"
                android:text="@string/tvDateOfBirth"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/etDateOfBirth"
                android:layout_width="match_parent"
                android:inputType="date"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:textColor="@color/colorBlack"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/text_view_shape" />
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:textSize="20dp"
                android:text="@string/tvAddress"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:textColor="@color/colorBlack"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/text_view_shape" />


            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nextText"
                android:onClick="createUser"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btnlogin_shape"
                android:layout_margin="30dp"
                android:layout_marginHorizontal="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>